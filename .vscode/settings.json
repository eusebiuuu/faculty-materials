{
    "workbench.startupEditor": "none",

    "editor.fontSize": 14,
    "editor.fontFamily": "monospace",
    "editor.tabSize": 4,
    "editor.suggestSelection": "first",
    "editor.renderWhitespace": "none",
    "editor.minimap.enabled": false,

    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "monospace",
    "terminal.integrated.allowChords": false,
    "debug.console.fontSize": 14,
    "debug.console.fontFamily": "monospace",

    "code-runner.runInTerminal": true,
    "code-runner.preserveFocus": false,
    "code-runner.ignoreSelection": true,
    "code-runner.executorMap": {
        "c": "cd $dir && gcc -std=c17 -Wall -Wextra $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt && rm $fileNameWithoutExt",
        "cpp": "cd $dir && g++ -std=c++20 -Wshadow -Wall -g -fsanitize=undefined -D_GLIBCXX_DEBUG -DONPC $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt && rm $fileNameWithoutExt",
        // "cpp": "cd $dir && g++ -std=c++20 -DONPC -O2 $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt && rm $fileNameWithoutExt"
        // super debugging: '-Wall -Wextra -pedantic -std=c++11 -O2 -Wshadow -Wformat=2 -Wfloat-equal -Wconversion -Wlogical-op -Wshift-overflow=2 -Wduplicated-cond -Wcast-qual -Wcast-align -D_GLIBCXX_DEBUG -D_GLIBCXX_DEBUG_PEDANTIC -D_FORTIFY_SOURCE=2 -fsanitize=address -fsanitize=undefined -fno-sanitize-recover -fstack-protector'
        //use 'g++ -std=c++20 -fsanitize=address -DONPC -O2' for fast compilation
    },

    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
    "C_Cpp.default.compilerPath": "/usr/bin/g++",
    "files.autoSave": "afterDelay",
    "explorer.confirmDelete": false,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "editor.renderLineHighlightOnlyWhenFocus": true,

    "editor.wordWrap": "on",
    
    "editor.wrappingIndent": "none",
    "editor.cursorBlinking": "smooth",
    "open-in-browser.default": "Firefox",
    "workbench.colorTheme": "Default Dark Modern",
    "C_Cpp.inactiveRegionOpacity": 0.55,
    "explorer.confirmDragAndDrop": false,

    "editor.formatOnType": false,

    "files.associations": {
        "*.erd": "json",
        "*.vuerd": "json",
        "cmath": "cpp",
        "iostream": "cpp",
        "chrono": "cpp",
